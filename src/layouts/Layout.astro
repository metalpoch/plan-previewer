---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Previzualizador de los planes ABA CANTV"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="md:px-10 px-5 w-screen bg-gradient-to-r from-[#001C3D] from-10% to-[#459DFF] to-90% text-white"
  >
    <header class="xl:w-full flex justify-between items-center p-2">
      <img src="/cantv.png" alt="Logo CANTV" />
      <h1 class="md:text-4xl text-2xl font-extrabold">Plan Migraci√≥n ABA</h1>
    </header>
    <slot />
  </body>
</html>
